# Pylint configuration for module_5
# Instructor requires no disabling of Pylint checks.
# All issues are fixed in code. Only non-disabling config used:
# - generated-members: informs Pylint about psycopg's dynamic API
# - good-names: Sphinx conf.py requires exact variable names
# - design limits: allow larger functions (refactored where practical)

[BASIC]
max-line-length=80
# Sphinx conf.py requires these exact names
good-names=project,copyright,author,release,html_theme,i,j,f,_,e,Scraper

[TYPECHECK]
# psycopg uses dynamic attributes; inform Pylint
# Use valid regex: .* matches any prefix before the attribute
generated-members=.*\.cursor,.*\.close,.*\.commit,.*\.rollback,
    .*\.execute,.*\.fetchone,.*\.rowcount

[DESIGN]
max-args=15
max-locals=35
max-branches=25
max-statements=100

[SIMILARITIES]
# Only flag code blocks of 15+ similar lines (SQL queries are often similar)
min-similarity-lines=50
